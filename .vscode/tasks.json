{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Convert YAML TextMate Grammar to JSON",
      "type": "shell",
      "command": "setopt nullglob; for file in syntaxes/*.tmLanguage.y{a,}ml; do npx js-yaml $file > ${file%.*}.json; done; unsetopt nullglob",
      "problemMatcher": [],
      "dependsOn": "process jinja templates"
    },
    {
      "label": "Process Jinja templates",
      "type": "shell",
      "command": "python",
      "args": ["process_jinja_templates.py"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
