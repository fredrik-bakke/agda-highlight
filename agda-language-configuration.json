{
  "comments": {
    "lineComment": "--",
    "blockComment": ["{-", "-}"]
  },

  // symbols used as brackets
  "brackets": [
    ["(", ")"],
    ["{", "}"],
    ["{!", "!}"],
    ["{-#", "#-}"]
    // ["{{", "}}"], // VS Code highlights nested curly braces wrong e.g. {{{}}}
    // ["⦃", "⦄"] // VS Code doesn't recognize the proper token boundaries
  ],
  // symbols that are auto closed when typing
  "autoClosingPairs": [
    {
      "open": "\"",
      "close": "\"",
      "notIn": ["comment", "string"]
    },
    {
      "open": "{!",
      "close": "!}",
      "notIn": ["comment", "string"]
    },
    {
      "open": "{-#",
      "close": "#-}",
      "notIn": ["comment", "string"]
    },
    {
      "open": "⦃",
      "close": "⦄",
      "notIn": ["comment", "string"]
    }
    // ["{{", "}}"], // Interferes with agda input mode
    // ["{", "}"], // Interferes with agda input mode
    // ["(", ")"], // Interferes with agda input mode
  ],
  // symbols that that can be used to surround a selection
  "surroundingPairs": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"],
    ["\"", "\""],
    ["'", "'"],
    ["{!", "!}"],
    ["{-#", "#-}"],
    ["{{", "}}"],
    ["⦃", "⦄"]
  ],
  "wordPattern": "[^\\s\\n\\.\\;\\{\\}\\(\\)\\@\\\"]+"
}
