{
  "name": "agda-syntax",
  "displayName": "agda-syntax",
  "description": "Syntax highlighting for Agda",
  "version": "0.4.4",
  "engines": {
    "vscode": "^0.0.1"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fredrik-bakke/agda-syntax-vscode"
  },
  "icon": "icon.png",
  "publisher": "FredrikBakke",
  "author": {
    "name": "Fredrik Bakke"
  },
  "preview": true,
  "contributes": {
    "languages": [
      {
        "id": "agda",
        "aliases": [
          "Agda",
          "agda"
        ],
        "extensions": [
          ".agda"
        ],
        "configuration": "./agda-configuration.jsonc",
        "scopeName": "source.agda"
      },
      {
        "id": "literate agda",
        "aliases": [
          "Literate Agda",
          "literate agda",
          "Literate Agda LaTeX",
          "Agda LaTeX",
          "Literate Agda Latex",
          "Agda Latex",
          "literate agda latex",
          "agda latex",
          "lagda-latex",
          "agda-latex",
          "lagda-tex",
          "agda-tex",
          "lagda"
        ],
        "extensions": [
          ".lagda",
          ".lagda.tex"
        ],
        "configuration": "./literate-agda-latex-configuration.jsonc",
        "scopeName": "text.tex.latex.agda"
      }
    ],
    "grammars": [
      {
        "language": "agda",
        "scopeName": "source.agda",
        "path": "./syntaxes/agda.tmLanguage.json"
      },
      {
        "scopeName": "source.agda.embedded.markdown",
        "path": "./syntaxes/agda-markdown-injection.tmLanguage.json",
        "injectTo": [
          "text.html.markdown",
          "source.markdown",
          "source.markdown.agda"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.agda": "agda"
        }
      },
      {
        "scopeName": "source.agda.embedded.latex",
        "path": "./syntaxes/literate-agda-latex-injection.tmLanguage.json",
        "injectTo": [
          "text.tex.latex.agda"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.agda": "agda"
        }
      },
      {
        "language": "literate agda",
        "scopeName": "text.tex.latex.agda",
        "path": "./syntaxes/literate-agda-latex.tmLanguage.json"
      }
    ],
    "keybindings": [
      {
        "command": "agda-mode.load",
        "key": "ctrl+c ctrl+l",
        "mac": "ctrl+c ctrl+l",
        "when": "(editorLangId == markdown || editorLangId == 'literate agda') && !editorHasSelection && editorTextFocus"
      },
      {
        "command": "agda-mode.input-symbol[Activate]",
        "key": "\\",
        "when": "editorLangId == markdown || editorLangId == 'literate agda'"
      },
      {
        "command": "agda-mode.input-symbol[Activate]",
        "key": "[Backslash]",
        "when": "editorLangId == markdown || editorLangId == 'literate agda'"
      }
    ]
  },
  "devDependencies": {
    "js-yaml": "^4.1.0"
  }
}
