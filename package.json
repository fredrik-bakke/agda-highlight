{
  "name": "agda-highlight",
  "displayName": "agda-highlight",
  "description": "Syntax highlighting for the Agda programming language.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "agda",
        "aliases": [
          "Agda",
          "agda"
        ],
        "extensions": [
          ".agda",
          ".lagda",
          ".lagda.md",
          ".lagda.rst",
          ".lagda.tex"
        ],
        "configuration": "./language-configuration.json",
        "scopeName": "source.agda"
      }
    ],
    "grammars": [
      {
        "language": "agda",
        "scopeName": "source.agda",
        "path": "./syntaxes/agda.tmLanguage.json"
      },
      {
        "scopeName": "source.agda.embedded",
        "path": "./syntaxes/agda-markdown-injection.tmLanguage.json",
        "injectTo": [
          "text.html.markdown"
        ],
        "embeddedLanguages": {
          "meta.embedded.block.agda": "agda"
        }
      }
    ],
    "keybindings": [
      {
        "command": "agda-mode.load",
        "key": "ctrl+c ctrl+l",
        "mac": "ctrl+c ctrl+l",
        "when": "editorLangId == markdown && !editorHasSelection && editorTextFocus"
      },
      {
        "command": "agda-mode.input-symbol[Activate]",
        "key": "\\",
        "when": "editorLangId == markdown"
      },
      {
        "command": "agda-mode.input-symbol[Activate]",
        "key": "[Backslash]",
        "when": "editorLangId == markdown"
      }
    ]
  },
  "devDependencies": {
    "js-yaml": "^4.1.0"
  }
}
